<resources>

    <style name="Widget.Theme.TicTacToe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TicTacToe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    //For all Buttons
    <style name="MyButton" parent="">
        <item name="backgroundTint">#101032</item>
        <item name="android:textSize">50sp</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#8793F7</item>
        <item name="android:width">90dp</item>
        <item name="android:height">90dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyTextview" parent="">
        <item name="android:hint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">#5D5C5C</item>
        </style>

    <style name="textview22" parent="">
        <item name="backgroundColor">#303D5D</item>
        <item name="android:backgroundTint">#303D5D</item>
        <item name="android:textColor">#8793F7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textStyle">bold</item>
        </style>

    <style name="restartbutton" parent="">
        <item name="android:width">315dp</item>
        <item name="android:height">60dp</item>
        <item name="android:background">@drawable/rounded_button_new</item>
        <item name="backgroundTint">#9CAEDB</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:radius">2dp</item>

    </style>
</resources>