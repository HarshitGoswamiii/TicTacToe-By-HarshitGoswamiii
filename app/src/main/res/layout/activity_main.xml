<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1f52"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tiv" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:columnCount="3"
        android:padding="10dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.117">

        <Button
            android:id="@+id/btns1"
            style="@style/MyButton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btns2"
            style="@style/MyButton"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btns3"
            style="@style/MyButton"
            android:background="@drawable/rounded_button"
            android:contentDescription="@string/f"
            android:onClick="check"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btns4"
            style="@style/MyButton"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="@string/f"
            android:onClick="check" />

        <Button
            android:id="@+id/btns5"
            style="@style/MyButton"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="@string/f"
            android:onClick="check" />

        <Button
            android:id="@+id/btns6"
            style="@style/MyButton"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btns7"
            style="@style/MyButton"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btns8"
            style="@style/MyButton"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btns9"
            style="@style/MyButton"
            android:background="@drawable/rounded_button"
            android:onClick="check"
            tools:ignore="SpeakableTextPresentCheck" />

    </GridLayout>

    <Button
        android:id="@+id/Rules"
        style="@style/restartbutton"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_button_new"
        android:text="@string/game_rules"
        android:textColor="#FEFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restart"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/restart"
        style="@style/restartbutton"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_new"
        android:text="@string/reset_game"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Rules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>